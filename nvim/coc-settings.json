{
    "json.format.enable": true,
    "languageserver": {
        "golang": {
			"command": "gopls",
			"rootPatterns": ["go.mod", ".git"],
			"filetypes": ["go"],
			"initializationOptions": {
				"gocodeCompletionEnabled": true,
				"diagnosticsEnabled": true,
				"lintTool": "golint"
			}
		}
    }
}

